  "screenshots": [
    {
      "src": "/assets/screenshots/desktop-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Démo interactive avec animation Blob"
    },
    {
      "src": "/assets/screenshots/desktop-2.png",
      "sizes": "1280x720",
