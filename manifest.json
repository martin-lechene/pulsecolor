    }
  ],
  "shortcuts": [
    {
      "name": "Démo Interactive",
      "short_name": "Démo",
      "description": "Lancer la démo interactive",
      "url": "/#demo",
      "icons": [
        {
          "src": "/assets/icons/shortcut-demo.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Documentation",
      "short_name": "Docs",
      "description": "Accéder à la documentation",
      "url": "/docs",
      "icons": [
        {
          "src": "/assets/icons/shortcut-docs.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "GitHub",
      "short_name": "GitHub",
      "description": "Voir le code source",
      "url": "https://github.com/pulsecolor/pulsecolor",
      "icons": [
        {
          "src": "/assets/icons/shortcut-github.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "web+pulsecolor",
      "url": "/?audio=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "audio/*": [".mp3", ".wav", ".m4a", ".ogg", ".flac"]
      }
    }
  ],
  "share_target": {
    "action": "/",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "permissions": [
    "microphone"
  ],
  "features": [
    "Cross Platform",
    "fast",
    "simple"
  ],
  "developer": {
    "name": "PulseColor Team",
    "url": "https://pulsecolor.dev"
  }
}
